<%= simple_form_for [product, Delivery.new], remote: true, data: { type: 'html', action: "ajax:success->deliveries#onPostSuccess" } do |f| %>
  <%= f.input :qty, as: :hidden %>
  <%= f.input :date, as: :hidden %>
  <%= f.input :batch_product_id, input_html: { value: product.id }, as: :hidden %>
  <%= f.submit '+' %>
<% end %>
